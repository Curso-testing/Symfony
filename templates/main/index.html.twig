{% extends 'base.html.twig' %}

{% block body %}
{% if isLockedDown %}
    {{ include('main/_lockDownAlert.html.twig') }}
{% endif %}
<div class="container volcano mt-4" style="flex-grow: 1;">
    <h1 class="mt-5">Dinotopia Status</h1>
    <div class="dino-stats-container mt-2 p-3">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Genus</th>
                <th>Size</th>
                <th>Enclosure</th>
                <th>Accepting Visitors</th>
            </tr>
            </thead>
            <tbody>
            {% for dino in dinos %}
                <tr>
                    <td>{{ dino.name }}</td>
                    <td>{{ dino.genus }}</td>
                    <td>{{ dino.sizeDescription }}</td>
                    <td>{{ dino.enclosure }}</td>
                    <td>{{ dino.acceptingVisitors ? 'Yes' : 'No' }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
